<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/task_details_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/task_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/titleHint"
            android:textSize="@dimen/textsize_large"
            android:inputType="textCapSentences"
            android:paddingTop="@dimen/ui_element_gap"/>

        <Spinner
            android:id="@+id/task_categories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/task_title"
            android:textSize="@dimen/textsize_medium"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/ui_element_gap"/>

        <EditText
            android:id="@+id/task_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/task_categories"
            android:gravity="top|left"
            android:hint="@string/descriptionHint"
            android:textSize="@dimen/textsize_medium"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="10"
            android:minLines="3"
            android:paddingTop="@dimen/ui_element_gap"/>

        <EditText
            android:id="@+id/task_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/task_description"
            android:hint="@string/locationHint"
            android:textSize="@dimen/textsize_medium"
            android:inputType="textCapSentences"
            android:paddingTop="@dimen/ui_element_gap"
            android:paddingBottom="@dimen/ui_element_gap"/>

        <CheckBox
            android:id="@+id/task_important"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/task_location"
            android:textSize="@dimen/textsize_small"
            android:text="@string/markAsImportant"/>

        <RelativeLayout
            android:id="@+id/remindMeField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_important"
            android:onClick="onRemindMe"
            android:clickable="true"
            android:background="@android:drawable/list_selector_background">

            <ImageView
                android:id="@+id/addAlarmImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/device_access_add_alarm"
                android:scaleType="centerCrop"
                android:minHeight="32dp"
                android:minWidth="32dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/ui_element_gap"
                android:layout_marginRight="@dimen/ui_element_gap"/>

            <TextView
                android:id="@+id/remindMeString"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/addAlarmImg"
                android:hint="@string/remind_me"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_medium"
                android:layout_marginTop="@dimen/ui_element_gap"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setReminderField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_below="@id/task_important"
            android:clickable="true"
            >

            <Spinner
                android:id="@+id/reminderTypeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/ui_element_gap"
                android:layout_marginLeft="@dimen/ui_element_gap"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/styled_spinner"/>


            <EditText
                android:id="@+id/reminderLocationEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:hint="@string/locationHint"
                android:visibility="invisible"
                android:textSize="@dimen/textsize_medium"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/reminderTypeSpinner"
                android:ems="10"/>


            <Spinner
                android:id="@+id/reminderDateSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/reminderTypeSpinner"
                android:paddingTop="@dimen/ui_element_gap"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:clickable="true"
                android:background="@drawable/styled_spinner"/>

            <Spinner
                android:id="@+id/reminderTimeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/reminderDateSpinner"
                android:paddingTop="@dimen/ui_element_gap"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/styled_spinner"/>

            <ImageButton
                android:id="@+id/reminderCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/ui_element_gap"
                android:paddingRight="@dimen/ui_element_gap"
                android:layout_marginRight="12dp"
                android:clickable="true"
                android:onClick="onCancelReminder"
                android:minHeight="3dp"
                android:minWidth="3dp"
                android:layout_centerVertical="true"
                android:src="@drawable/navigation_cancel"
                style="@android:style/Widget.ActionButton"/>

        </RelativeLayout>

        <View
            android:id="@+id/separator1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/remindMeField"
            android:layout_marginTop="@dimen/ui_element_gap"
            android:layout_marginBottom="@dimen/ui_element_gap"
            android:background="@android:color/holo_blue_dark"/>

        <Button
            android:id="@+id/task_convert_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/separator1"
            android:text="@string/convertToEvent"
            android:onClick="onConvertEvent"
            style="@android:style/Widget.ActionButton"
            android:clickable="true"/>

        <RelativeLayout
            android:id="@+id/eventSpinners"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_below="@id/separator1"
            android:padding="@dimen/ui_element_gap">

            <ImageButton
                android:id="@+id/eventCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="@dimen/ui_element_gap"
                android:clickable="true"
                android:onClick="onCancelEvent"
                android:minHeight="3dp"
                android:minWidth="3dp"
                android:src="@drawable/navigation_cancel"
                style="@android:style/Widget.ActionButton"/>

            <TextView
                android:id="@+id/fromString"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/fromLabel"
                android:textSize="@dimen/textsize_small"
                >
            </TextView>

            <Spinner
                android:id="@+id/date_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fromString"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/styled_spinner"/>

            <Spinner
                android:id="@+id/time_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fromString"
                android:layout_toRightOf="@id/date_from"
                android:background="@drawable/styled_spinner"/>

            <TextView
                android:id="@+id/toString"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/toLabel"
                android:textSize="@dimen/textsize_small"
                android:layout_below="@id/date_from">
            </TextView>

            <Spinner
                android:id="@+id/date_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toString"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/styled_spinner"/>

            <Spinner
                android:id="@+id/time_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/date_to"
                android:layout_below="@id/toString"
                android:background="@drawable/styled_spinner"/>

            <View
                android:id="@+id/separator2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/date_to"
                android:layout_marginTop="@dimen/ui_element_gap"
                android:layout_marginBottom="@dimen/ui_element_gap"
                android:background="@android:color/holo_blue_dark"/>


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>
